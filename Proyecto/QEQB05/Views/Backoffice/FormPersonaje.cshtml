@using QEQB05.Models;

@model Personaje

<link rel="stylesheet" href="~/Content/AdminPers.css">

@{
    ViewBag.Title = "Form personaje";
}

<h2>Form personaje</h2>

@using (Html.BeginForm("OperacionesPersonaje", "Backoffice", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    if (ViewBag.Accion == "Ver")
    {
        @Html.HiddenFor(x => x.Id);
        <p>Nombre: </p> @Html.TextBoxFor(x => x.Nombre, new { disabled = "disabled" })<br />
        <img class="icon-prev" src="@ViewBag.AuxFoto" alt="Personaje" height="40" width="40" />
        @Html.DropDownListFor(x => x.IdCategoría, new SelectList(ViewBag.Categorias, "Id", "Nombre"), new { disabled = "disabled" })

    }
    else
    {
        @Html.HiddenFor(x => x.Id);
        <p>Nombre: </p> @Html.TextBoxFor(x => x.Nombre, new { required = "required" }) @Html.ValidationMessageFor(x => x.Nombre) <br />
        if (ViewBag.Accion == "Insertar")
        {
            <p>Foto: </p> <input type="file" name="postedFile" id="postedFile" /> <br />
        }
        else
        {
            <p>Foto: </p>@Html.TextBoxFor(x => x.Foto, new { type = "file" })<br />
        }
        <lbl>Categoría: </lbl> @Html.DropDownListFor(x => x.IdCategoría, new SelectList(ViewBag.Categorias, "Id", "Nombre")) <br /><br />

    }
    <input type="hidden" name="Accion" value=@ViewBag.Accion />
    <input type="hidden" name="AuxFoto" value="@ViewBag.AuxFoto" />
    <input type="submit" value=Finalizar />
}