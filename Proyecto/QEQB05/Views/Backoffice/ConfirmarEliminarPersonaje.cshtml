@using QEQB05.Models;
@model Personaje
@{
    ViewBag.Title = "Confirmar";
}

<link rel="stylesheet" href="~/Content/ABMPerso.css">

<h2>Confirmar eliminar personaje</h2>

@using (Html.BeginForm("OperacionesPersonaje", "Backoffice", FormMethod.Post))
{

    <h5>¿Está seguro de que quiere eliminar este personaje?</h5>
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.Nombre)
    <input type="hidden" name="Accion" value="@ViewBag.Accion" />
    <input type="submit" value="Finalizar" />
}