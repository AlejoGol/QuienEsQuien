@using QEQB05.Models;
@{
    ViewBag.Title = "ABMCatPersonajes";
}

<h2>ABMCatPersonajes</h2>
<link rel="stylesheet" href="~/Content/ABMPerso.css">

<br />@Html.ActionLink("Agregar categoría", "EdicionCatPers", "Backoffice", new { Id = -1, Accion = "Insertar" }, null)<br /><br />
<table style="width:100%">
    <tr>
        <th>Nombre</th>

    </tr>
    @foreach (CategoríaP c in ViewBag.ListaCatPers)
    {

        <tr>
            <th>@c.Nombre</th>
            <th>@Html.ActionLink("Ver", "EdicionCatPers", "Backoffice", new { Accion = "Ver", Id = c.Id }, null)</th>
            <th>@Html.ActionLink("Editar", "EdicionCatPers", "Backoffice", new { Accion = "Modificar", Id = c.Id }, null)</th>
            <th>@Html.ActionLink("Eliminar", "EdicionCatPers", "Backoffice", new { Accion = "Eliminar", Id = c.Id }, null)</th>
        </tr>

    }
</table>