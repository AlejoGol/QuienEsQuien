
@{
    ViewBag.Title = "OlvidoContraseña";
}



@model  QEQB05.Models.Usuario
@if(ViewBag.veracidad==false)
{
    @ViewBag.mensaje;
}

@using (Html.BeginForm("CargarDatos2", "Home", FormMethod.Post))
{
    <p>ingrese su Mail:</p>@Html.TextBoxFor(x => x.Mail, new { required = "required" })@Html.ValidationMessageFor(x => x.Mail) <br />
    <p>ingrese su nueva Contraseña:</p> @Html.PasswordFor(x => x.Password, new { required = "required" })@Html.ValidationMessageFor(x => x.Password) <br />
    <p>Ingrese su pregunta de seguridad</p>@Html.TextBoxFor(x => x.Pregunta, new { required = "required" })@Html.ValidationMessageFor(x => x.Pregunta) <br />
    <p>Ingrese su respuesta de seguridad</p>@Html.TextBoxFor(x => x.respuesta, new { required = "required" })@Html.ValidationMessageFor(x => x.respuesta) <br />
    <input type="submit" value="Enviar" />

}