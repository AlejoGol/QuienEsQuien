@using QEQB05.Models
@{
    ViewBag.Title = "Jugar";
}

<h2>Jugar</h2>
@using (Html.BeginForm("OperacionesJuego", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    if (ViewBag.Respuesta != null)
    {
        <label>Respuesta: @ViewBag.Respuesta</label> <br />
    }
    <label>Puntaje: @ViewBag.puntaje</label><br />
    <label>Personajes Restantes: @ViewBag.CantPersRest</label><br />
    foreach (Pregunta preg in ViewBag.ListaPregs)
    {
        <input type="radio" name="IdP" value="@preg.IdPreg" required/> @Html.Label(preg.TextoPreg)<br />
    }
    @Html.ActionLink("Ver personajes restantes", "VerPersonajesRestantes", "Home")<br />
    @Html.ActionLink("Arriesgar", "Arriesgar", "Home")<br />
    <input type="submit" value="Continuar" />
}
